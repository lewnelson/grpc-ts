{
    "env": {
        "browser": true,
        "es2021": true
    },
    "plugins": ["@typescript-eslint/eslint-plugin"],
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "project": "./tsconfig.json",
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "@typescript-eslint/semi": ["error", "always"]
    }
}
